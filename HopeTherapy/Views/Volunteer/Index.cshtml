@model HopeTherapy.Models.Volunteer

@{
    ViewBag.Title = "Index";
}
<p><a href="/Home/Index" class="btn btn-primary btn-lg">Go Back &laquo;</a></p>
<p><a href='@Url.Action("Logout", "User")' class="btn btn-primary btn-lg">Sign Out &raquo;</a></p>

<center><h1>New Volunteer Registration</h1></center>

@using (Html.BeginForm("Index", "Volunteer", FormMethod.Post))
{
    <form>
        <fieldset>
            <legend>Personal Information</legend>

            <div class="1">
                <div class="col-sm-1">@Html.EditorFor(i => i.FirstName) @Html.ValidationMessageFor(i => i.FirstName)</div>
                <div class="col-sm-offset-3"> @Html.EditorFor(i => i.LastName) @Html.ValidationMessageFor(i => i.LastName) </div>
            </div><br />

            <div class="2">
                <div class="col-sm-1">@Html.EditorFor(i => i.StreetAddress) @Html.ValidationMessageFor(i => i.StreetAddress)</div>
                <div class="col-sm-offset-3">@Html.EditorFor(i => i.City) @Html.ValidationMessageFor(i => i.City)</div>
            </div><br />

            <div class="3">
                <div class="col-sm-1">
                    @Html.DisplayNameFor(i => i.States)
                    @Html.DropDownListFor(i => i.States, Model.StatesList) @Html.ValidationMessageFor(i => i.States)
                </div>

                <div class="col-sm-offset-3">
                    @Html.EditorFor(i => i.ZipCode) @Html.ValidationMessageFor(i => i.ZipCode)
                </div>
            </div><br />

            <div class="4">
                <div class="col-sm-1">
                    @Html.EditorFor(i => i.County) @Html.ValidationMessageFor(i => i.County)
                </div>

                <div class="col-sm-offset-3">
                    @Html.DisplayNameFor(i => i.Birthday)<br>
                    <input type="date" name="Birthday">
                </div>
            </div><br />

            <div class="7">
                <div class="col-sm-1">
                    @Html.DisplayNameFor(i => i.Gender)<br>
                    @Html.RadioButtonFor(model => model.Gender, "M", false)@Html.Label("Male")<br />
                    @Html.RadioButtonFor(model => model.Gender, "F", false)@Html.Label("Female")<br />
                    @Html.RadioButtonFor(model => model.Gender, "Other", false)@Html.Label("Other")<br /><br />
                </div>
            </div><br />

            <legend>Contact Information</legend>

            <div class="5">
                <div class="col-sm-1">
                    @Html.EditorFor(i => i.CellPhoneNumber) @Html.ValidationMessageFor(i => i.CellPhoneNumber)
                </div>
                <div class="col-sm-offset-3">
                    @Html.EditorFor(i => i.HomePhoneNumber) @Html.ValidationMessageFor(i => i.HomePhoneNumber)
                </div>
            </div><br />

            <div class="6">
                <div class="col-sm-1">
                    @Html.EditorFor(i => i.WorkPhoneNumber) @Html.ValidationMessageFor(i => i.WorkPhoneNumber)
                </div>
                <div class="col-sm-offset-3">
                    @Html.EditorFor(i => i.Email) @Html.ValidationMessageFor(i => i.Email)
                </div>
            </div><br />


            <legend>Employment Information</legend>
            

                    @Html.DisplayNameFor(i => i.DateOrientation)
                    <input type="date" name="DateOrientation"><br /><br />

                    @Html.DisplayNameFor(i => i.DateStarted)
                    <input type="date" name="DateStarted"><br /><br />

                    @Html.EditorFor(i => i.HoursPerMonth) @Html.ValidationMessageFor(i => i.HoursPerMonth)<br /><br /> 

                    @Html.EditorFor(i => i.CompanyName) @Html.ValidationMessageFor(i => i.CompanyName) <br /><br />

                    @Html.EditorFor(i => i.Position) @Html.ValidationMessageFor(i => i.Position)<br /><br />
  
                    @Html.EditorFor(i => i.CompanyAddress) @Html.ValidationMessageFor(i => i.CompanyAddress)<br /><br />


                <legend>Volunteer Information</legend>
                @Html.DisplayNameFor(i => i.VolunteerPosition)<text>:</text><br>
                @Html.DropDownListFor(i => i.VolunteerPosition, Model.VolunteerPositions) @Html.ValidationMessageFor(i => i.VolunteerPosition) <br><br><br />
                @Html.EditorFor(i => i.AreaOfInterest) @Html.ValidationMessageFor(i => i.AreaOfInterest) <br />
                @Html.EditorFor(i => i.Skills) @Html.ValidationMessageFor(i => i.Skills) <br />
                @Html.DisplayNameFor(i => i.Donor)<br>
                @Html.RadioButtonFor(model => model.Donor, "Y", false)@Html.Label("Yes")<br />
                @Html.RadioButtonFor(model => model.Donor, "N", false)@Html.Label("No")<br /><br />
                @Html.DisplayNameFor(i => i.Board)<br>
                @Html.RadioButtonFor(model => model.Board, "Y", false)@Html.Label("Yes")<br />
                @Html.RadioButtonFor(model => model.Board, "N", false)@Html.Label("No")<br /><br />
                @Html.DisplayNameFor(i => i.EmailList)<br>
                @Html.RadioButtonFor(model => model.EmailList, "Y", false)@Html.Label("Yes")<br />
                @Html.RadioButtonFor(model => model.EmailList, "N", false)@Html.Label("No")<br /><br />
                @Html.DisplayNameFor(i => i.MailList)<br>
                @Html.RadioButtonFor(model => model.MailList, "Y", false)@Html.Label("Yes")<br />
                @Html.RadioButtonFor(model => model.MailList, "N", false)@Html.Label("No")<br /><br />
                <input type="submit" value="Submit" />
</fieldset>
    </form>
}


