@model HopeTherapy.Models.Volunteer

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
</head>

    <p><a href="/Volunteer/List" class="btn btn-primary btn-lg">Go Back &laquo;</a></p>
    <p><a href='@Url.Action("Logout", "User")' class="btn btn-primary btn-lg">Sign Out &raquo;</a></p>

    <center><h2>Edit Volunteer</h2></center>

    @using (Html.BeginForm("EditVolunteer", "Volunteer", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4></h4>
            @Html.HiddenFor(model => model.VolunteerID)
