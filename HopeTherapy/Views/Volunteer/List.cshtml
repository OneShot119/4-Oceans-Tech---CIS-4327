@model IEnumerable<HopeTherapy.Models.Volunteer>
@{
    ViewBag.Title = "Volunteers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}




@using (Html.BeginForm("Action", "Controller", FormMethod.Post))
{


    <html>
    <head>
    </head>
    <body>
        <center><h1>Volunteer List</h1></center>
        
        <label for="Search">Last Name</label>
        <input type="text" name="search" id="search" />
        <button type="submit">Search</button><br /><br />
        
            <label for="Search2">County</label>
            <input type="text" name="search" id="search2" />
            <button type="submit">Search</button><br /><br />
        
        <table border="1" style="margin: 0px auto;">
            <tr>
                <th>
                     Name
                </th>
                <th>
                    Donor Email
                </th>
                <th>
                    Hours per Month
                </th>
            </tr>
            @foreach (var Volunteer in Model)
            {
                <tr>
                    <td>
                        <a href='@Url.Action("Edit", "Volunteer", new { ID = @Volunteer.VolunteerID})'>@Volunteer.FirstName @Volunteer.LastName</a>
                       
                    </td>
                    <td>
                        <a href="mailto:@Volunteer.Email">@Volunteer.Email</a>
                    </td>
                    <td>
                        @Volunteer.HoursPerMonth
                    </td>
                </tr>
            }

        </table>

    </body>
</html>
}

