@model IEnumerable<HopeTherapy.Models.Volunteer>
@{
    ViewBag.Title = "Volunteers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <html>
    <head>
    </head>
    <body>
        <br />
        <p><a href="/Home/Index" class="btn btn-primary btn-lg">Go Back &laquo;</a></p>
        <p><a href='@Url.Action("Logout", "User")' class="btn btn-primary btn-lg">Sign Out &raquo;</a></p>

        <center><h1>Volunteer List</h1></center>
        <center>
            <div class="row">
                <div class="col-sm-4">
                    @using (Html.BeginForm("ListByLastName", "Volunteer", FormMethod.Post))
                    {
                        <label for="Search">Last Name</label><br />
                        <input type="text" name="LastName" id="LastName" />
                        <button type="submit">Search</button><br /><br />
                    }
                </div>
                <div class="col-sm-4">
                    @using (Html.BeginForm("ListByCounty", "Volunteer", FormMethod.Post))
                    {
                        <label for="Search2">County</label><br />
                        <input type="text" name="County" id="County" />
                        <button type="submit">Search</button><br /><br />
                    }
                </div>
                <div class="col-sm-4">
                    @using (Html.BeginForm("ListByAll", "Volunteer", FormMethod.Post))
                    {
                        <label for="Search2">Anything</label><br />
                        <input type="text" name="All" id="All" />
                        <button type="submit">Search</button><br /><br />
                    }
                </div>
            </div>
        </center>
        
        
        <center><p><a href="/Volunteer/List" style="width:200px" class="btn btn-primary btn-lg" >View All Volunteers &raquo;</a></p></center>

        @if (Utilities.IsNullOrEmpty(Model))
        {
            <center><h1>Sorry but there aren't any results.</h1></center>
        }
        else
        {

            <table border="1" style="margin: 0px auto;">
                <thead style="font-size:23px">
                    <tr>
                        <th>
                            Name
                        </th>
                        <th>
                            Volunteer Email
                        </th>
                        <th colspan="2">
                            Hours per Month
                        </th>
                    </tr>
                </thead>
                @foreach (var Volunteer in Model)
                {
                    <tr>
                        <td>
                            <a href='@Url.Action("Profile", "Volunteer", new { ID = @Volunteer.VolunteerID })'>@Volunteer.FirstName @Volunteer.LastName</a>
                            <a href='@Url.Action("Edit", "Volunteer", new { ID = @Volunteer.VolunteerID })'><Font color="Green">Edit</Font></a>


                        </td>
                        <td>
                            <a href="mailto:@Volunteer.Email">@Volunteer.Email</a>
                        </td>
                        <td>
                            @Volunteer.HoursPerMonth <a href="@Url.Action("Delete", "Volunteer", new { ID = @Volunteer.VolunteerID })" class="btn btn-primary">Delete &raquo;</a>
                        </td>
                    </tr>
                }
            </table>
        }
</body>
</html>


