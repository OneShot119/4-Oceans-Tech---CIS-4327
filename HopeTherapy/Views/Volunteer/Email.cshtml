@model IEnumerable<HopeTherapy.Models.Volunteer>
@{
    ViewBag.Title = "Email";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<html>
<head>
</head>
<body>
    <br />
    <p><a href="/Volunteer/List" class="btn btn-primary btn-lg">Go Back &laquo;</a></p>
    <p><a href='@Url.Action("Logout", "User")' class="btn btn-primary btn-lg">Sign Out &raquo;</a></p>

    <center><h1>Email Volunteers</h1></center>

    @if (Model.Any())
    {
        <center><a href="mailto: @foreach (var Volunteer in Model) {@Volunteer.emailChain()}" class="btn btn-primary btn-lg">Send Email</a></center>
        foreach (var volunteer in Model)
        {
            <div class="col-sm-4" style="width:33.33%">
                <p>@volunteer.Email</p>
            </div>
        }
    }
    else
    {
        <center><h2>Sorry, nobody is in the Email list.</h2></center>
    }
</body>
</html>