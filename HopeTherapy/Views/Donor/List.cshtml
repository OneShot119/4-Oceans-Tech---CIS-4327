@model IEnumerable<HopeTherapy.Models.Donor>
@{
    ViewBag.Title = "Donors";
    Layout = "~/Views/Shared/_Layout.cshtml";
}




@using (Html.BeginForm("Action", "Controller", FormMethod.Post))
{


    <html>
    <head>
    </head>
    <body>
        <center><h1>Donor List</h1></center>
        <table border="1" style="margin: 0px auto;">
            <tr>
                <th>
                    Donor Name
                </th>
                <th>
                    Donor Email
                </th>
                <th>
                    Donation Information
                </th>
            </tr>
            @foreach (var Donor in Model)
            {
                <tr>
                    <td>
                        @Donor.FirstName @Donor.LastName
                    </td>
                    <td>
                        <a href="mailto:@Donor.EmailAddress">@Donor.EmailAddress</a>
                    </td>
                    <td>
                        Currency Donated: @Donor.CurrencyDonation<br />
                        Items Donated: @Donor.ItemDonation<br />
                        Services Donated: @Donor.ServiceDonation
                    </td>
                </tr>
            }

        </table>
        <right><h3>Search</h3></right>
    </body>
</html>
}

