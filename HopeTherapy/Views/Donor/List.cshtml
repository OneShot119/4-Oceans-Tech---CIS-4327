@model IEnumerable<HopeTherapy.Models.Donor>
@{
    ViewBag.Title = "Donors";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


    <html>
    <head>
        <style>
            textarea {
                width: 40%;
                height: 90px;
                padding: 12px 20px;
                box-sizing: border-box;
                border: 2px solid #555555;
                border-radius: 6px;
                background-color: white;
                font-size: 16px;
                resize: none;
            }
        </style>

        <style>
            .button {
                background-color: white;
                color: black;
                border: 2px solid #555555;
                border-radius: 6px;
                font-size: 24px;
                padding: 2px 8px;
            }

                .button:hover {
                    background-color: #555555;
                    color: white;
                }
        </style>

        <style>
            input[type=text] {
                height: 30px;
                width: 200px;
                padding: 2px 6px;
                box-sizing: border-box;
                border: 2px solid #555555;
                border-radius: 3px;
            }
        </style>
    </head>
        <body>
            <p><a href="/Home/Index" class="btn btn-primary btn-lg">Go Back &raquo;</a></p>
            <p><a href='@Url.Action("Logout", "User")' class="btn btn-primary btn-lg">Sign Out &raquo;</a></p>

            <center><h1>Donor list</h1></center>
            @using (Html.BeginForm("ListByLastName", "Donor", FormMethod.Post))
            {
                <label for="Search">Last Name</label><br />
                <input type="text" name="LastName" id="LastName" />
                <button type="submit">Search</button><br /><br />
            }
            @using (Html.BeginForm("ListByCounty", "Donor", FormMethod.Post))
            {
                <label for="Search2">County</label><br />
                <input type="text" name="County" id="County" />
                <button type="submit">Search</button><br /><br />
            }  
            <table border="1" style="margin: 0px auto;">
                <thead style="font-size:23px">
                    <tr>
                        <th>
                            Donor Name
                        </th>
                        <th>
                            Donor Email
                        </th>
                        <th>
                            Donations
                        </th>
                    </tr>
                </thead>
                @foreach (var Donor in Model)
                {
                    <tr>
                        <td>
                            <a href='@Url.Action("Edit", "Donor", new { ID = Donor.DonorID})'>@Donor.FirstName @Donor.LastName</a>
                            
                        </td>
                        <td>
                            <a href="mailto:@Donor.EmailAddress">@Donor.EmailAddress</a>
                        </td>
                        <td>
                           Donation Date: @Donor.DonationDate<br />
                           Money: @Donor.CurrencyDonation<br />
                           Inventory: @Donor.ItemDonation<br />
                           Services: @Donor.ServiceDonation
                        </td>
                    </tr>
                }

            </table>
        </body>
    </html> 

