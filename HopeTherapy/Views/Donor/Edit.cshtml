@model HopeTherapy.Models.Donor

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<head>
    <script type="text/javascript" src="~/scripts/jquery.formatCurrency-1.4.0.js"></script>
    @*<script type="text/javascript" src="~/scripts/jquery.validate.js"></script>*@
    <script src="~/scripts/jquery-1.10.2.js" type="text/javascript"></script>
    <script src="~/scripts/jquery.maskedinput.js" type="text/javascript"></script>
    <script type="text/javascript">
            $(document).ready(function()
            {
                $('.currency').blur(function()
                {
                    $('.currency').formatCurrency();
                });
            });
    </script>
</head>
<body>
    <p><a href="/Donor/List" class="btn btn-primary btn-lg">Go Back &laquo;</a></p>
    <p><a href='@Url.Action("Logout", "User")' class="btn btn-primary btn-lg">Sign Out &raquo;</a></p>

    <center><h2>Edit Donor</h2></center>

    @using (Html.BeginForm("EditDonor", "Donor", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4></h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.DonorID)

            <fieldset>
                <legend>Personal Information</legend>

                <div class="row">
                    <div class="col-sm-3">
                        @Html.DisplayNameFor(i => i.FirstName)<text>:</text><br>
                        @Html.TextBoxFor(i => i.FirstName, new { @class = "form-control", placeholder = "First Name", required = "required" })
                        @Html.ValidationMessageFor(i => i.FirstName)
                    </div>
                    <div class="col-sm-3">
                        @Html.DisplayNameFor(i => i.LastName)<text>:</text><br>
                        @Html.TextBoxFor(i => i.LastName, new { @class = "form-control", placeholder = "Last Name", required = "required" })
                        @Html.ValidationMessageFor(i => i.LastName)
                    </div>
                </div><br />
                <div class="row">
                    <div class="col-sm-3">
                        @Html.EditorFor(model => model.StreetAddress, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.StreetAddress, "", new { @class = "text-danger" })
                    </div>

                    <div class="col-sm-3">
                        @Html.EditorFor(model => model.City, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.City, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-3">
                        @Html.DisplayNameFor(i => i.State)<text>:</text><br>
                        @Html.DropDownListFor(i => i.State, Model.StatesList) @Html.ValidationMessageFor(i => i.State)
                    </div>

                    <div class="col-sm-3">
                        @Html.EditorFor(model => model.ZipCode, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.ZipCode, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-3">
                        @Html.EditorFor(model => model.County, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.County, "", new { @class = "text-danger" })
                        @Html.ValidationMessageFor(i => i.County)
                    </div>

                    <div class="col-sm-3">
                        @Html.DisplayNameFor(i => i.Birthday)<text>:</text><br>
                        @Html.EditorFor(i => i.Birthday, new { @class = "form-control", placeholder = "Birthday", required = "required" })<br />
                        @Html.ValidationMessageFor(i => i.Birthday)
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-3">
                        @Html.DisplayNameFor(i => i.Gender)<text>:</text><br>
                        @Html.RadioButtonFor(model => model.Gender, "M", false)@Html.Label("Male")<br />
                        @Html.RadioButtonFor(model => model.Gender, "F", false)@Html.Label("Female")<br />
                        @Html.RadioButtonFor(model => model.Gender, "Other", false)@Html.Label("Other")<br /><br />
                        @Html.ValidationMessageFor(i => i.Gender)
                    </div>
                </div>

                <legend>Contact Information</legend>
                <div class="row">
                    <div class="col-sm-3">
                        Cell Phone:<br>
                        <input id="cphone" type="text" name="CellPhoneNumber" value="@Model.CellPhoneNumber">
                    </div>

                    <div class="col-sm-3">
                        Home Phone:<br>
                        <input id="hphone" type="text" name="HomePhoneNumber" value="@Model.HomePhoneNumber">
                    </div>
                </div><br />

                <div class="row">
                    <div class="col-sm-3">
                        Business Phone:<br>
                        <input id="wphone" type="text" name="WorkPhoneNumber" value="@Model.WorkPhoneNumber">
                    </div>

                    <div class="col-sm-3">
                        Email:<br>
                        <input type="text" name="EmailAddress" value="@Model.EmailAddress">
                    </div>
                </div><br />
                <br /><br />

                <legend>Employment Information</legend>
                <div class="row">
                    <div class="col-sm-3">
                        @Html.EditorFor(model => model.CompanyName, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.CompanyName, "", new { @class = "text-danger" })
                    </div>

                    <div class="col-sm-3">
                        @Html.EditorFor(model => model.Position, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Position, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="row">
                    <div class="col-sm-3">
                        @Html.EditorFor(model => model.CompanyAddress, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.CompanyAddress, "", new { @class = "text-danger" })
                    </div>

                    <div class="col-sm-3">
                        @Html.EditorFor(model => model.CompanyCity, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.CompanyCity, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="row">
                    <div class="col-sm-3">
                        @Html.DisplayNameFor(i => i.CompanyState)<text>:</text><br>
                        @Html.DropDownListFor(i => i.CompanyState, Model.StatesList) @Html.ValidationMessageFor(i => i.CompanyState)
                    </div>

                    <div class="col-sm-3">
                        @Html.EditorFor(model => model.CompanyZip, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.CompanyZip, "", new { @class = "text-danger" })
                    </div>
                </div>

                <legend>Donation Information</legend>
                <div class="row">
                    <div class="col-sm-3">
                        @Html.DisplayNameFor(i => i.DonationDate)<text>:</text><br>
                        @Html.EditorFor(i => i.DonationDate, new { @class = "form-control", placeholder = "Donation Date", required = "required" })<br />
                        @Html.ValidationMessageFor(i => i.DonationDate)
                    </div>

                    <div class="col-sm-3">
                        @Html.EditorFor(i => i.CurrencyDonation, new { @class = "form-control", placeholder = "Donation Date", required = "required" })<br />
                        @Html.ValidationMessageFor(i => i.CurrencyDonation)
                    </div>
                </div><br />

                <div class="row">
                    <div class="col-sm-12">
                        Items Donated:<br />
                        @Html.TextAreaFor(model => model.ItemDonation, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.ItemDonation, "", new { @class = "text-danger" })
                    </div>
                </div><br />

                <div class="row">
                    <div class="col-sm-12">
                        Services Donated:<br />
                        @Html.TextAreaFor(model => model.ServiceDonation, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.ServiceDonation, "", new { @class = "text-danger" })
                    </div>
                </div><br />

                <div class="form-group">
                    <div class="col-sm-12">
                        <input type="submit" value="Save" class="btn btn-default" />
                    </div>
                </div>
            </fieldset>
        </div>
    }
    <script type="text/javascript">
                jQuery(function ($) {
                    $("#cphone").mask("(999) 999-9999");
                    $("#hphone").mask("(999) 999-9999");
                    $("#wphone").mask("(999) 999-9999");

                });
    </script>
</body>
