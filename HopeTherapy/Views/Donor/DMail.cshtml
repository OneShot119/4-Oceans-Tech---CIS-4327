@model IEnumerable<HopeTherapy.Models.Donor>
@{
    ViewBag.Title = "DMail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<html>
<head>
</head>
<body>
    <br />
    <p><a href="/Donor/List" class="btn btn-primary btn-lg">Go Back &laquo;</a></p>
    <p><a href='@Url.Action("Logout", "User")' class="btn btn-primary btn-lg">Sign Out &raquo;</a></p>

    <center><h1>Donor Mailing List</h1></center>
    @if (Model.Any())
    {
        foreach (var Donor in Model)
        {
            <div class="col-sm-4">
                <h2>@Donor.FirstName @Donor.LastName</h2>
                <h3> @Donor.StreetAddress </h3>
                <h3> @Donor.City ,  @Donor.State ,  @Donor.ZipCode </h3>
                <br /><br />
            </div>
        }
        <p>&nbsp;</p>
        <p>&nbsp;</p>
        <p>&nbsp;</p>
        <p>&nbsp;</p>
        <p>&nbsp;</p>
        <p>&nbsp;</p>
        <p>&nbsp;</p>
    }
    else
    {
        <br />
        <center><h2>Sorry, nobody is in the Mail list.</h2></center>
    }

</body>
</html>
