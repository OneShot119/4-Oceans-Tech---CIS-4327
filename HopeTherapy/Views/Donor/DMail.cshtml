@model IEnumerable<HopeTherapy.Models.Donor>
@{
    ViewBag.Title = "DMail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<html>
<head>
</head>
<body>
    <br />
    <p><a href="/Donor/List" class="btn btn-primary btn-lg">Go Back &laquo;</a></p>
    <p><a href='@Url.Action("Logout", "User")' class="btn btn-primary btn-lg">Sign Out &raquo;</a></p>

    <center><h1>Donor Mailing List</h1></center>
    @if (Model.Any())
    {
        var current = 0;
        var address = Model.ElementAt(current);
        while (address != null || Model.Count() < current)
        {
            <div class="row">
                @for (var i = 0; i < 3; i++)
                {
                    if (address != null)
                    {
                        <div class="col-sm-4">
                            <h2>@address.FirstName @address.LastName</h2>
                            <h3> @address.StreetAddress </h3>
                            <h3> @address.City ,  @address.State ,  @address.ZipCode </h3>
                            <br /><br />
                        </div>
                        current += 1;
                        if (Model.Count() <= current)
                        {
                            address = null;
                        }
                        else
                        {
                            address = Model.ElementAt(current);
                        }
                    }


                }
            </div>
        }
    }
    else
    {
        <br />
        <center><h2>Sorry, nobody is in the Mail list.</h2></center>
    }

</body>
</html>
