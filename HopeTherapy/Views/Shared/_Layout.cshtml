<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Hope Therapy</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/bootstrap")
    <link href="~/Content/site.css" rel="stylesheet" type="text/css" />
    <script>
       function success() {
           document.getElementById("success").style.display = "block";
           document.getElementById("success").delay(5000).fadeIn(400);;
       };
    </script>
</head>
<body>
    <header>
        <div class="container logo">
            <a href="/Home/Index">
                <img src="@Url.Content("~/Content/Images/HTlogo.png")" alt="Home" style="width:100px;height:100px;border:0;">
            </a>
            </div>
        <div class="alert alert-success" style="align-self:center ; Display:none"  id="success">
            <strong>Success!</strong> Indicates a successful or positive action.
        </div>
</header>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.UtcNow.Year - Hope Therapy</p>
        </footer>
    </div>


    @RenderSection("scripts", required: false)
</body>
</html>
